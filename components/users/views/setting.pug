div(class="z-0 flex flex-col xl:flex-row gap-4 items-center justify-center relative")
    div(class="w-[22rem] sm:w-[35rem] md:w-[45rem] h-max  xl:w-[26rem] xl:fixed xl:h-full xl:shadow inset-0 bg-white px-2 xl:p-8")
        section.flex.gap-4.flex-col(class=" xl:flex-col mt-10 xl:mt-28")
            a.items-center.group.gap-2.flex(href="/home" class="xl:hidden")
                svg(xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 transform group-hover:-translate-x-1 transition" fill="none" viewBox="0 0 24 24" stroke="currentColor")
                    path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18")
                | Kembali
            div(class="shadow rounded h-max flex-1 text-center pb-4 relative  ")
                img.mt-12.w-32.h-32.rounded-full.mx-auto.mt-4.border.border-sky-400(class="md:w-24 md:h-24 xl:w-32 xl:h-32" src=`https://avatars.dicebear.com/api/big-smile/${user.toddlername}.svg`, alt="profile picture")
                p.mt-4.text-gray-500= user.nik
                h1.font-bold.text-xl= user.toddlername
                    span(class="ml-2 text-sm font-bold text-green-600 opacity-70  border border-green-600 px-2 rounded p-1  bg-green-100") Gizi Baik
                p.pt-2
                    span.font-bold= user.gender
                    = user.date
    div(class="xl:w-full xl:pl-[26rem]")
        div(class="max-w-[22rem] sm:max-w-[35rem] md:max-w-[45rem] xl:max-w-[70rem] mx-auto flex flex-col gap-4 px-2 xl:p-4 bg-white")
            div.flex.flex-col
                a.items-center.group.gap-2.hidden(href="/home" class="xl:flex")
                    svg(xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 transform group-hover:-translate-x-1 transition" fill="none" viewBox="0 0 24 24" stroke="currentColor")
                        path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18")
                    | Kembali
                .mx-auto.border.p-4.h-max.rounded(class="w-[18rem] md:w-[30rem]")
                    form.space-y-4(action="/setting" method="post")
                        .flex.flex-col.w-full 
                            label(for="nik") NIK
                            input(type="hidden", name="id", value= user.id)
                            input#nik(type="text", name="nik" value= user.nik)
                        .flex.flex-col.gap-4.w-full(class="md:flex-row")
                            .flex.flex-col.flex-1 
                                label(for="mothername") Nama Ibu
                                input#mothername(type="text", name="mothername" value= user.mothername)
                            .flex.flex-col.flex-1 
                                label(for="toddlername") Nama Balita
                                input#toddlername(type="text", name="toddlername" value= user.toddlername)
                        .flex.flex-col.gap-4.w-full(class="md:flex-row")
                            .flex.flex-col.flex-1 
                                    label(for="gender") Jenis Kelamin Balita
                                    select#gender(name="gender") 
                                        option(value="Laki - Laki") Laki - Laki
                                        option(value="Perempuan" ) Perempuan
                            .flex.flex-col.flex-1 
                                label(for="dateOfBirth") Tanggal Lahir 
                                input#dateOfBirth(type="date", name="dateOfBirth" value= user.date)
                        .flex.gap-4.w-full 
                        .flex.flex-col.w-full 
                            label(for="password") Password
                            input#password(type="password", name="password" value= user.password)
                        button.px-4.py-1.w-full.text-white.font-bold.bg-sky-400.rounded(class="hover:bg-sky-300")
                            | Simpan
script(src="https://cdn.jsdelivr.net/npm/chart.js@3.6.0/dist/chart.min.js") 
script(src="/assets/js/main.js")
script(src="/assets/js/event.js") 