<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css" />
    <link rel="stylesheet" href="/assets/css/style.css" />
    <title>Giziku</title>
  </head>
  <body>
    <div class="bar">
      <div class="logo">
        <h1>Giziku</h1>
      </div>

      <%- include("./includes/account.ejs", {member}) %>
    </div>
    <div class="setting-container">
      <div class="setting">
        <div class="action">
          <a href="/home"><i class="bx bx-left-arrow-alt"></i> Kembali</a>
        </div>
        <div class="select-img">
          <i class="left bx bx-chevron-left"></i>
          <img id="img" src="<%= member.imgsrc %>" alt="" />
          <i class="right bx bx-chevron-right"></i>
        </div>

        <div class="input">
          <form action="/update-profile" method="post" class="input-group">
            <input type="hidden" name="id" value="<%= member.id %>" />
            <input type="hidden" id="imgsrc" name="imgsrc" value="<%= member.imgsrc %>" />
            <div class="flex-row">
              <div class="flex-col">
                <label for="nik">NIK</label>
                <input type="text" name="nik" id="nik" value="<%= member.nik %>" />
              </div>
            </div>
            <div class="flex-row">
              <div class="flex-col">
                <label for="mothername">Nama Ibu</label>
                <input
                  type="text"
                  name="mothername"
                  id="mothername"
                  value="<%= member.mothername %>" />
              </div>
              <div class="flex-col">
                <label for="childname">Nama Balita</label>
                <input
                  type="text"
                  name="childname"
                  id="childname"
                  value="<%= member.childname %> " />
              </div>
            </div>
            <div class="flex-row"></div>

            <div class="flex-row">
              <div class="flex-col">
                <label for="placeOfBirth">Tempat Lahir Balita</label>
                <input type="text" name="placeOfBirth" id="placeOfBirth" />
              </div>
              <div class="flex-col">
                <label for="dateOfBirth">Tanggal Lahir Balita</label>
                <input type="date" name="dateOfBirth" id="dateOfBirth" />
              </div>
            </div>
            <div class="flex-row">
              <div class="flex-col">
                <label for="">Jenis Kelamin</label>
                <select name="gender" id="gender">
                  <option value="Laki - Laki">Laki - Laki</option>
                  <option value="Perempuan">Perempuan</option>
                </select>
              </div>
              <div class="flex-col flex-end">
                <label for="address">Alamat</label>
                <input type="text" name="address" id="address" />
              </div>
            </div>
            <div class="flex-row">
              <div class="flex-col">
                <label for="password">Password</label>
                <input
                  type="password"
                  name="password"
                  id="password"
                  value="<%= member.password %> " />
              </div>
            </div>
            <button class="btn btn-secondary ml-05">Simpan</button>
          </form>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.6.0/dist/chart.min.js"></script>
    <script src="/assets/js/event.js"></script>
  </body>
</html>
